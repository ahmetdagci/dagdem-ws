	<profiles>
		<profile>
			<id>h2db</id>
			<properties>
				<hibernate.dialect>org.hibernate.dialect.H2Dialect</hibernate.dialect>
				<jdbc.driverClassName>org.h2.Driver</jdbc.driverClassName>
				<jdbc.url><![CDATA[jdbc:h2:tcp://localhost/~/satistakip;MODE=MySQL]]></jdbc.url>
				<jdbc.username>sa</jdbc.username>
				<jdbc.password></jdbc.password>
				<hibernate.hbm2ddl.auto>create-drop</hibernate.hbm2ddl.auto>
			</properties>
		</profile>
	
		<profile>
			<id>mysql</id>
			<properties>
				<hibernate.dialect>org.hibernate.dialect.MySQLDialect</hibernate.dialect>
				<jdbc.driverClassName>com.mysql.jdbc.Driver</jdbc.driverClassName>
				<jdbc.url><![CDATA[jdbc:mysql://localhost:3306/satistakip?zeroDateTimeBehavior=convertToNull]]></jdbc.url>
				<jdbc.username>root</jdbc.username>
				<jdbc.password>simone12345</jdbc.password>
				<hibernate.hbm2ddl.auto>create-drop</hibernate.hbm2ddl.auto>
			</properties>
		</profile>
	</profiles>
	
    <properties>
    	<final.name>dagdem-ws</final.name>
        <springframework.version>4.0.6.RELEASE</springframework.version>
        <hibernate.version>4.3.6.Final</hibernate.version>
        <mysql.version>5.1.31</mysql.version>
        <joda-time.version>2.3</joda-time.version>
        
		<commons-dbcp.version>1.4</commons-dbcp.version>
        
        <hibernate.dialect>org.hibernate.dialect.MySQLDialect</hibernate.dialect>
		<jdbc.driverClassName>com.mysql.jdbc.Driver</jdbc.driverClassName>
		<jdbc.url><![CDATA[jdbc:mysql://localhost:3306/satistakip]]></jdbc.url>
		<jdbc.username>root</jdbc.username>
		<jdbc.password>ahmet12345</jdbc.password>
		
		<hibernate.hbm2ddl.auto></hibernate.hbm2ddl.auto>
		<deploy.level>dev</deploy.level>
		<log.level>trace</log.level>
		<enable.debug>true</enable.debug>
		<enable.statistics>true</enable.statistics>
		<hibernate.show_sql>true</hibernate.show_sql>
		<format_sql>false</format_sql>
    </properties>


    <build>
    <finalName>${final.name}</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>*.xml</include>
					<include>**/*.xml</include>
					<include>*.wsdl</include>
					<include>**/*.wsdl</include>
					<include>*.properties</include>
					<include>**/*.properties</include>
					<include>*.txt</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>*.xml</exclude>
					<exclude>**/*.xml</exclude>
					<exclude>*.wsdl</exclude>
					<exclude>**/*.wsdl</exclude>
					<exclude>*.properties</exclude>
					<exclude>**/*.properties</exclude>
					<exclude>*.txt</exclude>
				</excludes>
			</resource>
		</resources>
		
        <plugins>
		
		<plugin>
			  <groupId>org.eclipse.jetty</groupId>
			  <artifactId>jetty-maven-plugin</artifactId>
			  <version>9.2.8.v20150217</version>
		</plugin>

		<plugin>
			  <groupId>org.codehaus.mojo</groupId>
			  <artifactId>exec-maven-plugin</artifactId>
			  <version>1.2.1</version>
			  <executions>
				<execution>
				  <goals>
					<goal>java</goal>
				  </goals>
				</execution>
			  </executions>
			  <configuration>
				<mainClass>com.tr.dagdem.util.ModelDBBuilder</mainClass>
				<!--
				<arguments>
				  <argument>foo</argument>
				  <argument>bar</argument>
				</arguments>
				-->
			  </configuration>
			</plugin>
	        <plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<configuration>
					<port>3131</port>
				</configuration>
			</plugin>
		
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

